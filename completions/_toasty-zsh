#compdef toasty-zsh

function _toasty-zsh {
    paths=($zd/plugins $zshd/plugins)
    _arguments \
        '-c[compile functions]' \
        '-l[if c is specified, also compile user functions]' \
        '*-p[load plugin]:plugin name:_path_files -W paths' \
        '-s[source $zrc]' \
        '-u[update]' 
}

_toasty-zsh

# vim: ft=zsh
